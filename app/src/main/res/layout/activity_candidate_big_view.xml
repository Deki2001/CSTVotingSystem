<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CandidateBigViewActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="10dp"
       >

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="145dp"
                android:layout_height="117dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.583" />

            <TextView
                android:id="@+id/t1_view"
                style="@style/cardText"
                android:text="Candidate Name"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/t2_view"
                style="@style/cardText"
                android:layout_below="@+id/t1"
                android:text="Candidate Email" />

            <TextView
                android:id="@+id/t3_view"
                style="@style/cardText"
                android:layout_below="@+id/t2"
                android:text="Candidate ID" />

            <TextView
                android:id="@+id/t4_view"
                style="@style/cardText"
                android:layout_below="@+id/t3"
                android:text="Candidate Role" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menifestos"
        android:text="View Menifestos"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >
    </Button>
   </LinearLayout>



</ScrollView>